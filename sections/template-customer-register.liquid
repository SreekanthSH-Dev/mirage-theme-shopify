
<div class="home-page-header">
  <div class="home-head-left">
      <img src="{{ 'register-page.webp' | asset_url }}" alt="Register page Image">

  </div>

  <div class="custom-login">
    <div class="login-small-container">
      <!-- Login Form -->
      <div id="login-form">
        <h1 class="login-title">Welcome</h1>

        {% form 'create_customer' %}
          {% if form.errors %}
            <div class="errors">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}
    <div class="name-row" style="display: flex; gap: 20px;">
      <div style="flex: 1;">
        <label for="FirstName">Enter Your First Name</label>
        <input type="text" name="customer[first_name]" id="FirstName" placeholder="First Name" required>
      </div>

      <div style="flex: 1;">
        <label for="LastName">Enter Your Last Name</label>
        <input type="text" name="customer[last_name]" id="LastName" placeholder="Last Name" required>
      </div>
    </div>

          <label for="CustomerEmail">Email</label>
          <input type="email" name="customer[email]" placeholder="Enter Your Email" id="CustomerEmail" required>

          <label for="CustomerPassword">Password</label>
          <input type="password" name="customer[password]" placeholder="Enter Your Password" id="CustomerPassword" required>

          <button type="submit">Create Account</button>
        {% endform %}

        <div class="form-customer__callout">
        <h2 class="form-customer__callout-title h3">Already have an account?</h2>
        <div>
            <a href="{{ routes.account_login_url }}"class="login-link">Already have an account?</a>
        </div>
    </div>
      </div>


  </div>
  </div>
</div>

